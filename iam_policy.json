#IAM Policy for Finegrained Access Control

{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "s3:PutObject",
        "s3:GetObject",
        "s3:ListBucket"
      ],
      "Resource": [
        "arn:aws:s3:::my-file-sharing-bucket",
        "arn:aws:s3:::my-file-sharing-bucket/*"
      ]
    }
  ]
}

